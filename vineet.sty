\newcommand{\alg}[2]{
    \begin{algorithm}[H]
        \caption{#1}
        \begin{algorithmic}[1]
            #2
        \end{algorithmic}
    \end{algorithm}
}
\algdef{SE}[EVENT]{Event}{EndEvent}[1]{\textbf{upon event}\ #1\ \algorithmicdo}{\algorithmicend\ \textbf{event}}
\algtext*{EndEvent}
